<h1>Gluten-Free Recipe Generator</h1>
<button onclick="showRecipe()">Generate Recipe</button>
<pre id="recipeOutput">Click the button to generate a recipe!</pre>

<script>
// ======= Programmatically generate 2,000 ingredients =======

const baseProteins = ["chicken", "tofu", "salmon", "ground turkey", "shrimp"];
const baseVegetables = ["broccoli", "spinach", "zucchini", "carrots", "bell peppers"];
const baseCarbs = ["quinoa", "rice", "sweet potato", "gluten-free pasta", "potatoes"];
const baseSpices = ["garlic", "paprika", "oregano", "cumin", "basil"];
const baseExtras = ["olive oil", "lemon juice", "gluten-free soy sauce", "parmesan", "nuts"];

function expandList(baseList, targetCount) {
    const expanded = [];
    let counter = 1;
    while (expanded.length < targetCount) {
        for (let item of baseList) {
            expanded.push(item + " #" + counter);
            counter++;
            if (expanded.length >= targetCount) break;
        }
    }
    return expanded;
}

// Generate all ingredients (~2,000 total)
const allIngredients = [
    ...expandList(baseProteins, 500),
    ...expandList(baseVegetables, 500),
    ...expandList(baseCarbs, 500),
    ...expandList(baseSpices, 300),
    ...expandList(baseExtras, 200)
];

const methods = ["roast","steam","grill","sautÃ©","bake","stir-fry","poach","slow cook"];

// Random helper
function randomChoice(arr) {
    return arr[Math.floor(Math.random() * arr.length)];
}

// Generate a recipe
function generateRecipe() {
    const method = randomChoice(methods);
    const numIngredients = Math.floor(Math.random() * 6) + 5; // 5â€“10 ingredients
    const recipeIngredients = [];

    while (recipeIngredients.length < numIngredients) {
        const ingredient = randomChoice(allIngredients);
        if (!recipeIngredients.includes(ingredient)) recipeIngredients.push(ingredient);
    }

    const main = recipeIngredients[0];
    const carb = recipeIngredients[1];
    const vegetable = recipeIngredients[2];

    return `
ðŸ½ Gluten-Free Recipe Idea:

Method: ${method} ${main} with ${vegetable} and ${carb}

Ingredients:
- ${recipeIngredients.join("\n- ")}

Instructions:
1. ${method.charAt(0).toUpperCase() + method.slice(1)} the ${main}.
2. Prepare the ${vegetable} and ${carb}.
3. Combine with other ingredients as desired.
4. Serve hot and enjoy your gluten-free meal!
`;
}

// Show recipe on page
function showRecipe() {
    document.getElementById("recipeOutput").textContent = generateRecipe();
}

// Auto-generate one recipe on page load
document.addEventListener("DOMContentLoaded", () => {
    showRecipe();
});
</script>

</body>
